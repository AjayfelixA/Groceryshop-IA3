{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Start",
      "type": "shell",
      "command": "cd \"${workspaceFolder}\\backend\"; if (-Not (Test-Path .env) -and (Test-Path .env.example)) { Copy-Item .env.example .env }; npm install; npm run seed -ErrorAction SilentlyContinue; npm start",
      "presentation": { "reveal": "always", "panel": "new" },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Start",
      "type": "shell",
      "command": "cd \"${workspaceFolder}\\frontend\"; npm install; npm start",
      "presentation": { "reveal": "always", "panel": "new" },
      "problemMatcher": []
    }
  ],
  "runOptions": { "runOn": "folderOpen" },
  "compounds": [
    {
      "label": "Run All (dev)",
      "dependsOn": ["Backend: Start", "Frontend: Start"],
      "dependsOrder": "sequence"
    }
  ]
}
